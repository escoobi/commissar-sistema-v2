# =====================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =====================================================

# Flask
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False

# MongoDB - USAR URI DE PRODUÇÃO AQUI
# Exemplo para MongoDB Atlas (nuvem):
# MONGO_URI=mongodb+srv://usuario:senha@cluster.mongodb.net/comissao_db?retryWrites=true&w=majority
# Para servidor local:
MONGO_URI=mongodb://localhost:27017/comissao_db

# Segurança
# IMPORTANTE: Gerar uma chave secreta forte para produção
# Comando: python -c "import os; print(os.urandom(24).hex())"
SECRET_KEY=gere-uma-chave-forte-com-32-caracteres-alfanumericos

# Upload de arquivos
UPLOAD_FOLDER=./uploads
ALLOWED_EXTENSIONS=csv,xlsx
MAX_CONTENT_LENGTH=16777216

# Logging
LOG_LEVEL=INFO

# Servidor
FLASK_PORT=5000
WORKERS=4

# CORS (se necessário)
CORS_ENABLED=True
CORS_ORIGINS=*

# Rate Limiting (proteção contra abuso)
RATELIMIT_ENABLED=True
RATELIMIT_REQUESTS=100
RATELIMIT_PERIOD=3600
